@page "/signup"
@using System.ComponentModel.DataAnnotations

<div class="flex h-full flex-1 overflow-hidden">
    <!-- Left side (Image) -->
    <div class="hidden flex-1 items-center justify-center overflow-hidden lg:flex">
        <img src="/images/image.png" alt="image" class="h-[80vh] max-w-full object-contain" />
    </div>
    <!-- Form container -->
    <div class="mt-25 flex flex-1 items-center justify-center overflow-hidden">
        <div class="mx-auto w-full max-w-sm p-8">
            <h2 class="mb-6 text-center text-2xl font-bold">Sign Up</h2>

            <EditForm Model="@signUpModel" OnValidSubmit="@HandleSignUp">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Email</label>
                    <InputText class="mt-1 w-full rounded border px-3 py-2 focus:ring-2 focus:ring-green-500 focus:outline-none" @bind-Value="signUpModel.Email" />
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Password</label>
                    <InputText type="password" class="mt-1 w-full rounded border px-3 py-2 focus:ring-2 focus:ring-green-500 focus:outline-none" @bind-Value="signUpModel.Password" />
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <InputText type="password" class="mt-1 w-full rounded border px-3 py-2 focus:ring-2 focus:ring-green-500 focus:outline-none" @bind-Value="signUpModel.ConfirmPassword" />
                </div>

                <button type="submit" class="w-full rounded bg-green-500 py-2 text-white transition hover:bg-green-600">
                    Sign Up
                </button>
            </EditForm>

            <div class="mt-4 text-center text-sm text-gray-600">
                Already have an account?
                <a class="text-blue-500 hover:underline" href="/auth/signin">Sign In</a>
            </div>
        </div>
    </div>
</div>

@code {
    private SignUpModel signUpModel = new();

    private void HandleSignUp()
    {
        // Your signup logic here
    }

    public class SignUpModel
    {
        [Required(ErrorMessage = "Email is required.")]
        [EmailAddress(ErrorMessage = "Invalid email address.")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Password is required.")]
        public string Password { get; set; } = "";

        [Required(ErrorMessage = "Confirm Password is required.")]
        [Compare(nameof(Password), ErrorMessage = "Passwords do not match.")]
        public string ConfirmPassword { get; set; } = "";
    }
}