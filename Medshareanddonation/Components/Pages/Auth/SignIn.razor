@page "/signin"
@using System.ComponentModel.DataAnnotations

<div class="flex h-full flex-1 overflow-hidden">
    <!-- Left side (Image) -->
    <div class="hidden flex-1 items-center justify-center overflow-hidden lg:flex">
        <img src="/images/image.png" alt="image" class="h-[80vh] max-w-full object-contain" />
    </div>
    <!-- Form container -->
    <div class="mt-25 flex flex-1 items-center justify-center overflow-hidden">
        <div class="mx-auto w-full max-w-sm p-8">
            <h2 class="mb-6 text-center text-2xl font-bold">Sign In</h2>

            <EditForm Model="@signInModel" OnValidSubmit="@HandleSignIn">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Email</label>
                    <InputText class="mt-1 w-full rounded border px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" @bind-Value="signInModel.Email" />
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700">Password</label>
                    <InputText type="password" class="mt-1 w-full rounded border px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" @bind-Value="signInModel.Password" />
                </div>

                <button type="submit" class="w-full rounded bg-blue-500 py-2 text-white transition hover:bg-blue-600">
                    Sign In
                </button>
            </EditForm>

            <div class="mt-4 text-center text-sm text-gray-600">
                Don't have an account?
                <a class="text-blue-500 hover:underline" href="/auth/signup">Sign Up</a>
            </div>
        </div>
    </div>
</div>

@code {
    private SignInModel signInModel = new();

    private void HandleSignIn()
    {
        // Your authentication logic here
    }

    public class SignInModel
    {
        [Required(ErrorMessage = "Email is required.")]
        [EmailAddress(ErrorMessage = "Invalid email address.")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Password is required.")]
        public string Password { get; set; } = "";
    }
}